@model Demo_ASPNET_MVC.Models.Employee

@{
    ViewData["Title"] = "Collect Form Data From Both Main And PartialView";
}

<h1>Collect Form Data From Both Main And PartialView</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="GetFormDataFromMainAndPartialView" asp-controller="CollectFormDataFromBothMainAndPartialView" method="post">
            <h6>Employee Code from Partial View</h6>
            <hr />
            <partial name="_EmployeeCodePartialView" />
            <br/>
            <h6>First Name and Last Name in Main View</h6>
            <hr />
            <div class="form-group">
                <label asp-for="FirstName" class="control-label">First Name</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label">Last Name</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


